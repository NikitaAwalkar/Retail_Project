pipeline {
    agent any
    
    environment {
        LABS = credentials('labcreds')
        JAVA_HOME = '/opt/bitnami/java'
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
    }
    
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'pip install --upgrade pip'       // upgrade pip
                sh 'pip install pipenv'              // install pipenv globally
                sh 'pipenv install'                  // install deps from Pipfile
            }
        }
        
        stage('Test') {
            steps {
                sh 'echo $JAVA_HOME'
                sh 'echo $PATH'
                sh 'pipenv run pytest'               // run tests via pipenv
            }
        }
        
        stage('Package') {
            steps {
                sh 'zip -r retailproject.zip . -x "retail_pipeline_venv/*"'
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'sshpass -p $LABS_PSW scp -o StrictHostKeyChecking=no -r retailproject.zip $LABS_USR@g02.itversity.com:/home/itv012419/retailproject'
            }
        }
    }
}
